<?xml version='1.0' encoding='utf-8'?>
<settings>
    <setting name="font_name">
        <widget_type>FontConfigTextBox</widget_type>
        <label_text>Name</label_text>
        <data_type>string</data_type>
        <default_value>Unnamed Font</default_value>
        <description>Name of the font</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>font_name_on_change_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="font_variant">
        <widget_type>FontConfigTextBox</widget_type>
        <label_text>Variant</label_text>
        <data_type>string</data_type>
        <default_value>Regular</default_value>
        <description>Variant of the font, e.g. Regular, Bold, Italic, Condensed</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>font_variant_on_change_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>

    <setting name="font_width">
        <widget_type>FontConfigTextBox</widget_type>
        <label_text>Width</label_text>
        <data_type>int</data_type>
        <default_value>8</default_value>
        <description>Width of each character</description>
        <event_handlers>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="font_height">
        <widget_type>FontConfigTextBox</widget_type>
        <label_text>Height</label_text>
        <data_type>int</data_type>
        <default_value>8</default_value>
        <description>Height of each character</description>
        <event_handlers>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="point_size">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>Point Size</label_text>
        <data_type>int</data_type>
        <default_value>8</default_value>
        <min_value>1</min_value>
        <max_value>+256</max_value>
        <step_value>1</step_value>
        <description>Size of the font in points</description>
        <hidden>
            <font_type>
                <item>png</item>
                <item>font</item>
            </font_type>
        </hidden>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>point_size_on_change_handler</item>
                <item>default_redraw_font_handler</item>
                <!-- <item>default_resample_font_handler</item> -->
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="offset_left">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>Offset Left</label_text>
        <data_type>int</data_type>
        <default_value>0</default_value>
        <min_value>-256</min_value>
        <max_value>+256</max_value>
        <step_value>1</step_value>
        <description>Horizontal offset (e.g., for alignment)</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>offset_left_on_change_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="offset_top">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>Offset Top</label_text>
        <data_type>int</data_type>
        <default_value>0</default_value>
        <min_value>-256</min_value>
        <max_value>+256</max_value>
        <step_value>1</step_value>
        <description>Vertical offset</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>offset_top_on_change_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="offset_width">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>Offset Width</label_text>
        <data_type>int</data_type>
        <default_value>0</default_value>
        <min_value>-256</min_value>
        <max_value>+256</max_value>
        <step_value>1</step_value>
        <description>Additional width offset for specific rendering</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>offset_width_on_change_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="offset_height">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>Offset Height</label_text>
        <data_type>int</data_type>
        <default_value>0</default_value>
        <min_value>-256</min_value>
        <max_value>+256</max_value>
        <step_value>1</step_value>
        <description>Additional height offset for specific rendering</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>offset_height_on_change_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="scale_width">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>Scale Width</label_text>
        <data_type>int</data_type>
        <default_value>0</default_value>
        <min_value>-256</min_value>
        <max_value>+256</max_value>
        <step_value>1</step_value>
        <description>Additional width offset for specific rendering</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>scale_width_on_change_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="scale_height">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>Scale Height</label_text>
        <data_type>int</data_type>
        <default_value>0</default_value>
        <min_value>-256</min_value>
        <max_value>+256</max_value>
        <step_value>1</step_value>
        <description>Additional height offset for specific rendering</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>scale_height_on_change_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="raster_type">
        <widget_type>FontConfigComboBox</widget_type>
        <label_text>Raster Type</label_text>
        <data_type>string</data_type>
        <default_value>threshold</default_value>
        <options>
            <item>threshold</item>
            <item>quantized</item>
            <item>grayscale</item>
            <item>palette</item>
        </options>
        <description>Type of rasterization</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>raster_type_on_change_handler</item>
                <item>default_redraw_font_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="threshold">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>Threshold</label_text>
        <data_type>int</data_type>
        <default_value>128</default_value>
        <min_value>0</min_value>
        <max_value>255</max_value>
        <step_value>1</step_value>
        <description>Threshold value for binary conversion (if thresholded)</description>
        <visible>
            <setting name="raster_type">
                <item>threshold</item>
            </setting>
    
        </visible>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>threshold_on_change_handler</item>
                <item>default_redraw_font_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="palette">
        <widget_type>FontConfigComboBox</widget_type>
        <label_text>Palette</label_text>
        <data_type>string</data_type>
        <default_value>Agon64</default_value>
        <options>
            <item>Agon64</item>
            <item>Agon16</item>
            <item>Agon4</item>
            <item>Agon2</item>
            <item>RGB222</item>
            <item>RGB332</item>
            <item>Rainbow</item>
            <item>VRGB2222</item>
        </options>
        <description>Color palette to use when rasterizing font.</description>
        <visible>
            <setting name="raster_type">
                <item>palette</item>
            </setting>
        </visible>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>palette_on_change_handler</item>
                <item>default_redraw_font_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="fg_color">
        <widget_type>FontConfigColorPicker</widget_type>
        <label_text>FG Color</label_text>
        <data_type>string</data_type>
        <default_value>255,255,255,255</default_value>
        <description>Foreground Color RGBA tuple</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>fg_color_on_change_handler</item>
                <item>default_redraw_font_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="bg_color">
        <widget_type>FontConfigColorPicker</widget_type>
        <label_text>BG Color</label_text>
        <data_type>string</data_type>
        <default_value>0,0,0,255</default_value>
        <description>Background Color RGBA tuple</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>bg_color_on_change_handler</item>
                <item>default_redraw_font_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="ascii_start">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>ASCII Start</label_text>
        <data_type>int</data_type>
        <default_value>32</default_value>
        <min_value>0</min_value>
        <max_value>255</max_value>
        <step_value>16</step_value>
        <description>ASCII start range for the font</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>ascii_start_on_change_handler</item>
                <item>default_redraw_font_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="ascii_end">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>ASCII End</label_text>
        <data_type>int</data_type>
        <default_value>127</default_value>
        <min_value>0</min_value>
        <max_value>255</max_value>
        <step_value>16</step_value>
        <description>ASCII end range for the font</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>ascii_end_on_change_handler</item>
                <item>default_redraw_font_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
    <setting name="chars_per_row">
        <widget_type>FontConfigDeltaControl</widget_type>
        <label_text>Chars per Row</label_text>
        <data_type>int</data_type>
        <default_value>16</default_value>
        <min_value>1</min_value>
        <max_value>256</max_value>
        <step_value>1</step_value>
        <description>Number of characters per row in the PNG grid</description>
        <event_handlers>
            <on_change>
                <!-- <item>default_on_change_handler</item> -->
                <item>chars_per_row_on_change_handler</item>
                <item>default_redraw_font_handler</item>
                <item>default_resample_font_handler</item>
            </on_change>
            <on_hover>
                <item>default_on_mouse_enter</item>
            </on_hover>
        </event_handlers>
    </setting>
    
</settings>